{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "@shared/*": [
                "shared/*"
            ]
        }
    },
    "include": [
        "api/**/*",
        "backend/src/**/*",
        "shared/**/*"
    ]
}